<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5fbd49d4722aba53"></script>
<style>
  #study-article {
    font-family: "Open Sans", Helvetica, Arial, sans-serif;
    /*font-family: "Raleway", sans-serif;*/
  }

  #study-article .main-banner {
    overflow: hidden;
    position: relative;
    height: 300px;
    background-size: 100%;
    background-position: center;
    margin-bottom: 2em;
  }

  #study-article .main-banner-content {
    position: absolute;
    height: 50%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(0, 45, 114, 50%);
    padding: 7em 4em 3em 4em;
  }

  #study-article .main-banner-content .epigraph {
    color: #F89F21;
    font-weight: bold;
    text-transform: none;
    font-size: 14px;
    margin-bottom: 3px;
  }

  #study-article .main-banner-content .title {
    color: white;
    font-weight: bold;
    font-size: 26px;
    text-transform: none;
    margin-top: 3px;
  }

  #study-article .main-container {
    padding-bottom: 0em;
    border-bottom: 1px solid #ebebeb;
  }

  #study-article .main-container h2.title {
    color: black;
    text-transform: none;
    font-weight: 700;
    font-size: 20px;
    padding-bottom: 5px;
    border-bottom: 3px solid rgb(0, 45, 114);
    width: fit-content;
    margin-top: 30px;
  }

  #study-article .main-container p.text {
    font-size: 14px;
    color: black;
    line-height: 21px;
    padding-bottom: 1em;
  }

  #study-article .main-container ul li {
    list-style: initial;
  }

  #study-article .main-container font {
    font-family: 'Open Sans'!important;
    font-size: 14px!important;
  }

  #study-article iframe {
    margin: 1em 0em;
  }

  #study-article .main-container h5.subtitle {
    font-size: 12px;
    color: rgb(0, 45, 114);
    line-height: 21px;
    font-weight: bold;
    text-transform: none;
    padding: 10px 0px 13px 0px;
  }

  #study-article .main-container .orange-btn {
    background-color: #F89F21;
    color: rgb(0, 45, 114);
    text-transform: uppercase;
    font-size: 12px;
    font-weight: bold;
    padding: 5px 35px;
    border: 0px;
    border-radius: 3px;
    margin-top: 1.5em;
  }

  #study-article .side-card {
    margin-bottom: 0px;
  }

  #study-article .side-card img {
    width: 100%;
  }

  #study-article .card-description {
    background-color: rgb(0, 45, 114);
    padding: 2em 2em;
    width: 100%;
    margin-top: -1em;
    list-style: unset;
    margin-bottom: 3em;
  }

  #study-article .card-description .card-title  ul li {
    list-style: initial;
  }

  #study-article .card-description .card-title  font {
    font-family: 'Open Sans'!important;
    font-size: 14px!important;
  }

  #study-article .card-description .card-title {
    color: white;
    font-size: 16px;
    letter-spacing: 1px;
    font-weight: 600;
    text-transform: none;
    margin-top: 0px;
  }

  #study-article .card-description .orange-btn {
    padding: 8px 15px;

  }

  #study-article .actions {
    display: flex;
  }

  #study-article .actions img {
    height: 25px;
    padding-right: 15px;
  }

  #study-article .actions .actions-div {
    position: relative;
    padding-top: 1rem;
    padding-right: 0.5rem;
  }

  #study-article .actions .social-badge {
    background-color: rgb(0, 45, 114);
    font-size: 9px;
    padding: 1px 6px;
    color: white;
    border-radius: 50%;

    position: absolute;
    top: 0px;
    right: 3px;
  }

  #study-article .article-footer {
    padding-top: 2em;
    padding-bottom: 2em;
  }

  #study-article .article-footer .tags {
    padding-top: 2em;
    display: flex;
    flex-wrap: wrap;
  }

  #study-article .article-footer p.text {
    text-transform: uppercase;
    color: black;
    font-size: 14px;
    font-weight: bold;
    padding-right: 1em;
    padding-top: 5px;
  }

  #study-article .article-footer p.tag {
    background-color: black;
    font-size: 13px;
    color: white;
    padding: 5px 7px;
    margin-right: 5px;
    margin-bottom: 1em;
  }

  #imageheader{

    width: 100%;
    position: absolute;
    top: 0;
  }

  .container-case{
    padding-bottom: 35px;
  }

  
.next-article-container{
    border-top: 3px solid #91b5f7;
    border-bottom: 3px solid #91b5f7;
    padding: 35px 0px 35px 0px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.next-article-title{

    text-transform: none;
    font-weight: normal;
    font-size: 18px;
    letter-spacing: 0px;
}

.tag-next-article{

    font-weight: bold;
    font-size: 24px;
}

  @media (max-width: 768px) {
    .side-card-container {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
    }

    #study-article .side-card {
      width: 45%;
    }

    #card-img-one {
      margin-top: 89px;
    }

    #imageheader {
    width: 100%;
    position: absolute;
    top: 0%;
    object-fit: cover;
    height: 57vh;
  }

  .img-novideo{
    padding-bottom: 0px;
  }

}

  @media (max-width: 500px) {
    #study-article .side-card {
      width: 100%;
    }

    #study-article .main-banner-content .title {
      font-size: 20px;
    }

    #study-article .main-banner {
      background-size: cover;
    }

    #study-article .main-banner-content {
      padding: 2em 2em 3em 2em;
    }
  }
</style>

<div id="study-article">
  <div class="main-banner">
    <img id="imageheader" src="{{this.imageHeader}}" />
     <div class="main-banner-content">
      <h4 class="epigraph">
        {{model.item.custitem_kd_case_study_header_title}}
      </h4>
      <h1 class="title">
        {{{model.item.custitem_kd_case_study_header_txt}}}
      </h1>
    </div>
  </div>

  <div class="main-container">
    <div class="row">
      <div class="col-md-9 col-xs-12 container-case">
        <p class="text">
          {{{model.item.custitem_kd_case_study_intro}}}
        </p>

        <h2 class="title">
          {{model.item.custitem_kd_case_study_paragraph_1_tit}}
        </h2>
        <p class="text">
          {{{model.item.custitem_kd_case_study_paragraph_1}}}
        </p>

        <h2 class="title">
          {{model.item.custitem_kd_case_study_paragraph_2_tit}}
        </h2>
        <p class="text">
          {{{model.item.custitem_kd_case_study_paragraph_2}}}
        </p>

        <h2 class="title">
          {{model.item.custitem_kd_case_study_paragraph_3_tit}}
        </h2>
        <p class="text"></p>
        <p class="text">
          {{{model.item.custitem_kd_case_study_paragraph_3}}}
        </p>

        {{#if this.model.item.custitem_kd_case_study_video_title}}
          <h5 class="subtitle">
            {{model.item.custitem_kd_case_study_video_title}}
          </h5>
        {{/if}}

        {{#if this.model.item.custitem_kd_case_study_video}}
        <iframe width="100%" height="415" src={{model.item.custitem_kd_case_study_video}} frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
          {{else}}

            <img class="img-novideo" src="{{model.item.custitem_kd_no_video_image}}" />
 
        {{/if}}

        {{#if this.model.item.custitem_kd_case_study_download_pdf}}
        <h5 class="subtitle">
          To download a copy of the full case study, please click the link below.
        </h5>

        <a class="orange-btn" target="_blank" href={{model.item.custitem_kd_case_study_download_pdf}}>
          Download case study
        </a>
        {{/if}}
      </div>

      <div class="col-md-3 col-xs-12 side-card-container">
        {{#if model.item.custitem_kd_case_study_card_1_image}}
        <div class="side-card">
          <img id="card-img-one" src={{model.item.custitem_kd_case_study_card_1_image}} alt="">
          <div class="card-description">
            <h3 class="card-title">
              {{{model.item.custitem_kd_case_study_card_1_text}}}
            </h3>
            <button class="orange-btn">
              <a href="{{model.item.custitem_kd_case_study_card_1_button}}"> Find out more </a>
            </button>
          </div>
        </div>
      {{/if}}
      {{#if model.item.custitem_kd_case_study_card_2_image}}
        <div class="side-card">
          <img src={{model.item.custitem_kd_case_study_card_2_image}} alt="">
          <div class="card-description">
            <h3 class="card-title">
              {{{model.item.custitem_kd_case_study_card_2_text}}}
            </h3>
          </div>
        </div>
    {{/if}}
      </div>
    </div>
  </div>

  <div class="article-footer">
    <div class="actions">
      {{!-- <div class="actions-div">
        <img src="/site/Landing-Pages/case-studies-article/chat-icon.png" alt="">
        <span class="social-badge">0</span>
      </div>
      <div class="actions-div">
        <img src="/site/Landing-Pages/case-studies-article/heart-icon.png" alt="">
        <span class="social-badge">14</span>
      </div>
      <div class="actions-div">
        <img src="/site/Landing-Pages/case-studies-article/share-icon.png" alt="">
      </div> --}}
      <div class="addthis_default_style addthis_toolbox addthis_button_compact"></div>
      <div class="addthis_inline_share_toolbox"></div>
    </div>

    <!-- related items as next article -->

    {{#if this.model.item.relateditems_detail}}

    <div class="next-article-container">
            <h3 class="next-article-title">Read the next article</h3>

            <a class="tag-next-article" href="{{this.model.item.relateditems_detail.[0].urlcomponent}}" data-touchpoint="home"> {{this.model.item.relateditems_detail.[0].displayname}} </a>
    </div>
    {{/if}}

    <div class="tags">
      <p class="text">
        TAGS:
      </p>
      {{#each tags}}
        <p class="tag">
          {{this}}
        </p>
      {{/each}}
    </div>
  </div>
  <!-- main container ends -->
</div>

